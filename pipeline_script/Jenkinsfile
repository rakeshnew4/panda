pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: my-pipeline-pod
spec:
  containers:
  - name: dockerindocker
    image: docker:1.2.0
    tty: true
    securityContext:
        privileged: true
"""
        }
    }
    stages {
        stage("Deploy") {
            steps {
                container("dockerindocker"){
                sh "ls"
                sh "docker buildx build -t panda:v1 ."  // Run shell command to list files
                echo "Hello, Jenkins!"  // Print a message
                }

            }
        }
    }
}
